{
  "manifest_version": 2,
  "name": "JavaScript Detector",
  "version": "1.0",
  "description": "Detects and lists all JavaScript files loaded on the current page.",
  "permissions": [
    "webRequest",
    "activeTab",
    "clipboardWrite",
    "<all_urls>",
    "webNavigation",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "JavaScript Detector"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
